@model BookCart.Models.Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-1 mt-1">
        <div class="row pb-1">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-2 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Price50" class="p-0"></label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Price100" class="p-0"></label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-warning"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-danger" style="width:150px">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
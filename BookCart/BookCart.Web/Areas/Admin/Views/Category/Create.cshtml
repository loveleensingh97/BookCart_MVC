@model BookCart.Models.Category

<form method="post">
    <div class="border p-1 mt-1">
        <div class="row pb-1">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-2 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-warning"></span>
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-warning"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-danger" style="width:150px">
            Back
        </a>
    </div>
</form>

        @section Scripts{
            @{
        <partial name="_ValidationScriptsPartial" />
            }
        }